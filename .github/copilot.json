{
  "copilot": {
    "instructions": [
      ".github/copilot-instructions.md",
      ".github/copilot-chat-instructions.md"
    ],
    "project": {
      "name": "LumiFur Controller",
      "type": "embedded-cpp",
      "platform": "esp32",
      "framework": "arduino-platformio"
    },
    "contexts": [
      {
        "pattern": "src/**/*.cpp",
        "instructions": "Apply embedded C++ patterns with ESP32 constraints"
      },
      {
        "pattern": "{src,include}/**/*.h", 
        "instructions": "Use header-only patterns appropriate for embedded systems"
      },
      {
        "pattern": "test/**/*",
        "instructions": "Generate Unity or GoogleTest compatible test code"
      },
      {
        "pattern": "platformio.ini",
        "instructions": "Maintain PlatformIO configuration standards"
      },
      {
        "pattern": "**/CMakeLists.txt",
        "instructions": "Follow CMAKE best practices for embedded ESP32 development"
      },
      {
        "pattern": ".github/workflows/*.{yml,yaml}",
        "instructions": "Maintain GitHub Actions workflows for PlatformIO and CodeQL analysis"
      }
    ],
    "features": {
      "memory_awareness": true,
      "hardware_constraints": true,
      "real_time_requirements": true,
      "power_efficiency": true
    }
  }
}